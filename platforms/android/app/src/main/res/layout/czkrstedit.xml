<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#B0E0E6"
    android:orientation="vertical"
     >

     <TextView
        android:id="@+id/CZKCardBarLabel"
        android:text="充值卡信息"
        android:background="#ff99ccff"
        android:textSize="28dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        />
    
     <ScrollView
        android:id="@+id/scrollViewCZK"
        android:layout_below="@id/CZKCardBarLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
 	<ImageView
       	android:id= "@+id/CZKImageIV"
       	android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        />
       
     <TextView
        android:id="@+id/CZKCardNameLabel"
        android:layout_below="@id/CZKImageIV"
        android:text="卡号:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/CZKCardNoEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/CZKCardNameLabel"
        android:textSize="18sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
     <Button
        android:id="@+id/czkcardReturn"
        android:layout_marginTop="10dp"
        android:background="#ff99ccff"
        android:text="确定"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
 		android:layout_below="@id/CZKCardNoEditText"
		android:onClick="onCZKReturn"
         />
            
            
     </RelativeLayout>
   
    </ScrollView>
 </RelativeLayout>