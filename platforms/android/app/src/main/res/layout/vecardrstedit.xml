<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#B0E0E6"
    android:orientation="vertical"
     >

     <TextView
        android:id="@+id/VECardBarLabel"
        android:text="行驶证信息"
        android:background="#ff99ccff"
        android:textSize="28dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        />
    
     <ScrollView
        android:id="@+id/scrollView3"
        android:layout_below="@id/VECardBarLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
          
      <TextView
        android:id="@+id/VECardPlateNoLabel"
        android:text="号牌号码:"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        />
    <EditText
        android:id="@+id/VECardPlateNoEditText"
        android:layout_below="@id/VECardPlateNoLabel"
        android:textColor="#000000"
        android:background="#ffffff"
        android:textSize="18sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
         />

    <TextView
        android:id="@+id/VECardVehicleTypeLabel"
        android:text="车辆类型:"
        android:layout_below="@id/VECardPlateNoEditText"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        />
    <EditText
        android:id="@+id/VECardVehicleTypeEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardVehicleTypeLabel"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardOwnerLabel"
        android:text="所有人:"
        android:layout_below="@id/VECardVehicleTypeEditText"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardOwnerEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardOwnerLabel"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardAddressLabel"
        android:text="住址:"
        android:layout_below="@id/VECardOwnerEditText"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardAddressEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardAddressLabel" 
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardModelLabel"
        android:text="品牌型号:"
        android:layout_below="@id/VECardAddressEditText"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardModelEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardModelLabel"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardUseCharacterLabel"
        android:text="使用性质:"
        android:layout_below="@id/VECardModelEditText"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardUseCharacterEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardUseCharacterLabel"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardEngineNoLabel"
        android:text="发动机号:"
        android:layout_below="@id/VECardUseCharacterEditText"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardEngineNoEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardEngineNoLabel"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardVINLabel"
        android:text="车辆识别代码:"
        android:layout_below="@id/VECardEngineNoEditText"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardVINEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardVINLabel"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
         />
    
        <TextView
        android:id="@+id/VECardRegisterDateLabel"
        android:text="注册日期:"
        android:layout_below="@id/VECardVINEditText"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardRegisterDateEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardRegisterDateLabel"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardIssueDateLabel"
        android:text="发证日期:"
        android:layout_below="@id/VECardRegisterDateEditText"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardIssueDateEditText"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardIssueDateLabel"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
         />

    <Button
        android:id="@+id/vecardReturn"
        android:layout_marginTop="10dp"
        android:background="#ff99ccff"
        android:text="确定"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
 		android:layout_below="@id/VECardIssueDateEditText"
		android:onClick="onVEReturn"

         />
          
        </RelativeLayout>
        
      </ScrollView>
   
</RelativeLayout>