<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#B0E0E6"
    android:orientation="vertical"
     >

     <TextView
        android:id="@+id/VECardBarLabelP"
        android:text="行驶证信息"
        android:background="#ff99ccff"
        android:textSize="28dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        />
    
     <ScrollView
        android:id="@+id/scrollView3P"
        android:layout_below="@id/VECardBarLabelP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
      	<LinearLayout
                android:id="@+id/FullImageBGP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border" >

                <ImageView
                    android:id="@+id/FullImageViewP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff" />
            </LinearLayout>
            
      <TextView
        android:id="@+id/VECardPlateNoLabelP"
        android:text="号牌号码:"
        android:layout_below="@id/FullImageBGP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        />
    <EditText
        android:id="@+id/VECardPlateNoEditTextP"
        android:layout_below="@id/VECardPlateNoLabelP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:textSize="18sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
         />

    <TextView
        android:id="@+id/VECardVehicleTypeLabelP"
        android:text="车辆类型:"
        android:layout_below="@id/VECardPlateNoEditTextP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        />
    <EditText
        android:id="@+id/VECardVehicleTypeEditTextP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardVehicleTypeLabelP"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardOwnerLabelP"
        android:text="所有人:"
        android:layout_below="@id/VECardVehicleTypeEditTextP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardOwnerEditTextP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardOwnerLabelP"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardAddressLabelP"
        android:text="住址:"
        android:layout_below="@id/VECardOwnerEditTextP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardAddressEditTextP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardAddressLabelP" 
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardModelLabelP"
        android:text="品牌型号:"
        android:layout_below="@id/VECardAddressEditTextP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardModelEditTextP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardModelLabelP"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardUseCharacterLabelP"
        android:text="使用性质:"
        android:layout_below="@id/VECardModelEditTextP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardUseCharacterEditTextP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardUseCharacterLabelP"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardEngineNoLabelP"
        android:text="发动机号:"
        android:layout_below="@id/VECardUseCharacterEditTextP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardEngineNoEditTextP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardEngineNoLabelP"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardVINLabelP"
        android:text="车辆识别代码:"
        android:layout_below="@id/VECardEngineNoEditTextP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardVINEditTextP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardVINLabelP"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
         />
    
        <TextView
        android:id="@+id/VECardRegisterDateLabelP"
        android:text="注册日期:"
        android:layout_below="@id/VECardVINEditTextP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardRegisterDateEditTextP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardRegisterDateLabelP"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
         />
    
        <TextView
        android:id="@+id/VECardIssueDateLabelP"
        android:text="发证日期:"
        android:layout_below="@id/VECardRegisterDateEditTextP"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:id="@+id/VECardIssueDateEditTextP"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@id/VECardIssueDateLabelP"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
         />

    <Button
        android:id="@+id/vecardReturnP"
        android:layout_marginTop="10dp"
        android:background="#ff99ccff"
        android:text="确定"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
 		android:layout_below="@id/VECardIssueDateEditTextP"
		android:onClick="onVEReturn"

         />
          
        </RelativeLayout>
        
      </ScrollView>
   
</RelativeLayout>