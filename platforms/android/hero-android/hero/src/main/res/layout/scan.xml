<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/previewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/centerView"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            />

        <View
            android:id="@+id/rightView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/centerView"
            android:background="#80000000"
            />

        <View
            android:id="@+id/leftView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/centerView"
            android:background="#80000000"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/centerView"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/rightView"
            android:layout_toRightOf="@+id/leftView"
            android:background="#80000000"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/centerView"
            android:layout_toLeftOf="@+id/rightView"
            android:layout_toRightOf="@+id/leftView"
            android:background="#80000000"
            />

    </RelativeLayout>
</FrameLayout>